# Helper script to run libraries configure some basic options

# Never set st rings as factors automatically
options(stringsAsFactors = FALSE)

# Set no. of digits and turn off scientific noticaiton
options(digits = 4)
options(scipen = 999)

# Load packages
library(rmarkdown)
library(knitr)
library(padr)
library(scales)
library(formattable)
library(stringr)
library(lubridate)
library(tidyquant)
library(glue)
library(janitor)
library(tidyverse)
library(rvest)
library(ggrepel)
library(skimr)
library(travelr)